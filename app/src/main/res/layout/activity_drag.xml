<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jian.activity.DragActivity">

    <TextView
        android:id="@+id/activity_shorthand_difficulty_title"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/c4_2"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/global_margin_horizontal"
        android:paddingStart="@dimen/global_margin_horizontal"
        android:text="这几个单词有点难记，重新记一遍吧"
        android:textColor="#52748c"
        android:textSize="@dimen/t7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.jian.widget.DragRecyclerView
        android:id="@+id/activity_word_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fadeScrollbars="false"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@+id/activity_shorthand_button_center_base_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_shorthand_difficulty_title" />

    <android.support.constraint.Guideline
        android:id="@+id/activity_shorthand_button_center_base_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="187dp" />
</android.support.constraint.ConstraintLayout>
