<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jian.activity.DragActivity">

    <TextView
        android:id="@+id/activity_shorthand_difficulty_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c4_2"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/global_margin_horizontal"
        android:paddingStart="@dimen/global_margin_horizontal"
        android:text="这几个单词有点难记，重新记一遍吧"
        android:textColor="#52748c"
        android:textSize="@dimen/t7" />

    <com.jian.widget.DragRecyclerView
        android:id="@+id/activity_word_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fadeScrollbars="false"
        android:scrollbars="vertical" />

</LinearLayout>
