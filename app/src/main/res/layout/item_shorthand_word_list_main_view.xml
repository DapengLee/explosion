<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_shorthand_word_content"
    android:layout_width="match_parent"
    android:layout_height="118dp"
    android:background="@color/c2">

    <ImageView
        android:id="@+id/item_shorthand_familiar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/global_margin_horizontal"
        android:layout_gravity="right|center_vertical"
        android:background="@drawable/ic_select_word_weak"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/item_shorthand_word"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/global_margin_horizontal"
        android:gravity="center"
        android:singleLine="true"
        android:text="baseball player"
        android:textColor="@color/c3_6"
        android:textSize="45.33sp" />

    <TextView
        android:id="@+id/item_shorthand_phrase"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="467dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="棒球女运动员"
        android:textColor="@color/c3_1"
        android:textSize="@dimen/t1" />
</FrameLayout>